<!--Editing a department View -->

@model LeaveSystemMVC.Models.aDepartment
@Html.Partial("_LeftMenu")
<div class="col-md-10">
    <h2>Editing a Department</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Application Details</div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    <div class="form-horizontal"
                        <div class="row">
                            <div class="col-md-10" style="white-space:nowrap; line-height:60px;">
                                <label>List of Departments with Current Line Managers</label>
                                <div class="col-md-8">
                                    @Html.ListBoxFor(model => model.departmentName, new SelectList(ViewBag.departmentDetails), new { @class = "form-control", size = 5 })
                                </div>
                                </div>
                        </div>   
                        <br />
                        
                        <div class="row">
                            <!--Prompts user to select one of the departments in the database to edit -->
                            <div class="col-md-6" style="white-space:nowrap">
                                @Html.LabelFor(model => model.departmentName, "Select Department to Edit", htmlAttributes: new { @class = "control-label col-md-2" })
                            </div>
                                 <div class="col-md-5">
                                    @Html.DropDownListFor(model => model.departmentName, new SelectList(ViewBag.departmentNames), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.departmentName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        
                        <br />
                        <div class="col-md-6" style="white-space:nowrap">

                            <!--Prompts user to select a different line manager for the department from the list-->

                            @Html.LabelFor(model => model.primaryLMID, "New Line Manager", htmlAttributes: new { @class = "control-label col-md-2" })
                            </div>
                            <div class="col-md-5">
                                @Html.DropDownListFor(model => model.primaryLMID, new SelectList(Model.linemanagerSelectionListOptions, "Key", "Value"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.primaryLMID, "", new { @class = "text-danger" })
                            </div>
                        

                        <br /><br /><br />
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-8">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
