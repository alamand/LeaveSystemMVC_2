@model LeaveSystemMVC.Models.Users
@{ ViewBag.Title = "Login"; }

<div class="col-md-10">
    <h2>@ViewBag.Title</h2>
    <hr />
    @Html.ValidationSummary(true)

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.UserID, htmlAttributes: new { @class = "control-label" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.UserID, new { @class = "form-control" })
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
            </div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-4">
                <button type="submit" class="btn btn-success col-md-4">
                    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Log In
                </button>
            </div>
        </div>
    }
</div>
