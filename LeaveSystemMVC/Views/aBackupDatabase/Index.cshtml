@Html.Partial("_LeftMenu")
@{
    ViewBag.Title = "Database Backup";
}

<div class="col-md-10">
    <h2>@ViewBag.Title</h2>
    <hr />
    <h5>Please note that this might take a while to generate.</h5>
    <div class="row">
        <div class="col-md-2">
            @using (Html.BeginForm("DownloadBAK", "aBackupDatabase", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-horizontal">
                    <div class="col-md-10">
                        <input type="submit" name="Index" value="Download .BAK" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-2">
            @using (Html.BeginForm("DownloadSQL", "aBackupDatabase", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-horizontal">
                    <div class="col-md-10">
                        <input type="submit" name="Index" value="Download .SQL" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

