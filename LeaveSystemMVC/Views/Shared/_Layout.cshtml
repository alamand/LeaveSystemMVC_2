<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Leave Management System</title>
    @Styles.Render("~/Content/Theme")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- main / large navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".main-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>                    
                </div>
                
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="collapse navbar-collapse main-navbar-collapse">
                        <ul class="nav navbar-nav"></ul>
                        <div class="collapse navbar-collapse bootstrap-admin-navbar-sm">
                            <ul class="nav navbar-nav navbar-right ">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Account <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="/Auth/Logout">Log Out</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div><!-- /.navbar-collapse -->
                }

            </div>
        </div><!-- /.container -->
    </nav>
    <a class="col-sm-offset-0" href="/Home/Index"><img src="~/Content/GIMEL_logo.jpg" height="90" width="auto" /></a>
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
        <div class="row">
            <div class="col-md-6">
                <hr>
                <footer>
                    <p>&copy; @DateTime.Now.Year - Leave Management System</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(".dropdown-toggle").attr("data-toggle", "dropdown");
    </script>
</body>
</html>
