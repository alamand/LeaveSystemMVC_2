<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Leave Management System</title>
    @Styles.Render("~/Content/Theme")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- main / large navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="collapse navbar-collapse main-navbar-collapse">
                    <div class="collapse navbar-collapse bootstrap-admin-navbar-sm">
                        <a class="col-sm-offset-0" href="/Home/Index"><img src="~/Content/GIMEL_logo.jpg" height="55" width="auto" /></a>
                        <ul class="nav navbar-nav navbar-right ">
                            <li><p style="padding-top:15px">Logged In as <b>@Session["UserName"]</b></p></li>
                            <li><a href="/Auth/Logout" class="navbar-link">Log Out</a></li>
                        </ul>
                    </div>
                </div><!-- /.navbar-collapse -->
            }
            else
            {
                <a class="col-sm-offset-0" href="/Home/Index"><img src="~/Content/GIMEL_logo.jpg" height="55" width="auto" /></a>
            }
        </div><!-- /.container -->
    </nav>
    <div class="container">
        <div class="row">
            @RenderBody()
        </div>
        <div class="row">
            <div class="col-md-6">
                <hr>
                <footer>
                    <p>&copy; @DateTime.Now.Year - Leave Management System</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
