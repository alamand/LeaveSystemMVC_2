@model LeaveSystemMVC.Models.hrDaysInLieu
@Html.Partial("_LeftMenu")
<div class="col-md-8">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2>Credit Days in Lieu</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <!--DIL date-->
            <div class="container-fluid form-group">
                <div class="row">
                    <div class="col-xs-2" style="white-space:nowrap">
                        @Html.LabelFor(model => model.Date, "Date", htmlAttributes: new { @class = "control-label col-md-1", type = "Date" })
                    </div>

                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Date)
                    </div>

                    <div class="col-xs-2" style="white-space:nowrap">
                        @Html.LabelFor(model => model.NumDays, "Duration", htmlAttributes: new { @class = "control-label col-md-4" })
                    </div>

                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.NumDays, new List<SelectListItem> { 
                            new SelectListItem{ Text="1 day", Value = "1" },
                            new SelectListItem{ Text="Half day", Value = "0.5" }
                        }) 

                        @Html.ValidationMessageFor(model => model.NumDays, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Employee_ID)
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                @Html.LabelFor(model => model.Comment, "Comment", htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.TextAreaFor(model => model.Comment, new { rows = "6", cols = "35" })
            </div>

            <br /><br /><br />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
