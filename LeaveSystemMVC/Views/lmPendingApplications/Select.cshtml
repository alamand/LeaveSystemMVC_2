@model LeaveSystemMVC.Models.sLeaveModel

@Html.Partial("_LeftMenu")

@using (Html.BeginForm("Select", "lmPendingApplications", FormMethod.Post, new { SL = Model }))
{
    <div class="col-md-10">
        <div>
            <h2>Leave Application</h2>
            <hr />
            <div class="row">
                <div class="col-md-5">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="text-muted bootstrap-admin-box-title">Application Details</div>
                        </div>
                        <div class="bootstrap-admin-panel-content">
                            <div class="row">
                                <dl class="dl-horizontal">

                                    @Html.HiddenFor(model => model.leaveID)

                                    <dt>
                                        @Html.DisplayNameFor(model => model.staffName)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.staffName)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.leaveType)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.leaveType)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.startDate)
                                        @Html.HiddenFor(model => model.startDate)
                                        @Html.HiddenFor(model => model.returnDate)
                                        @Html.HiddenFor(model => model.endDate)
                                        @Html.HiddenFor(model => model.leaveType)
                                    </dt>
                                    @{
                                        string startDateString = Model.startDate.ToString("yyyy/MM/dd");
                                        string endDateString = Model.endDate.ToString("yyyy/MM/dd");
                                        string returnDateString = Model.returnDate.ToString("yyyy/MM/dd");
                                    }
                                    <dd>
                                        @Html.DisplayFor(sd => startDateString)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.endDate)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(ed => endDateString)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.returnDate)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(rd => returnDateString)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.leaveDuration)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.leaveDuration)
                                    </dd>

                                    @if (Model.leaveType.Equals("Short_Hours"))
                                    {
                                        <dt>
                                            @Html.DisplayNameFor(model => model.shortStartTime)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.shortStartTime)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.shortEndTime)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.shortEndTime)
                                        </dd>
                                    }


                                    @Html.HiddenFor(model => model.leaveStatus)

                                    <dt>
                                        @Html.DisplayNameFor(model => model.comments)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.comments)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.supportingDocs)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.supportingDocs)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.bookAirTicket)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.bookAirTicket)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.contactDetails)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.contactDetails)
                                    </dd>

                                </dl>
                            </div>

                            <hr />
                            <div class="row">
                                @Html.LabelFor(model => model.lmComment, "Comment", htmlAttributes: new { @class = "control-label col-md-4" })

                                @Html.TextAreaFor(model => model.lmComment, new { rows = "6", cols = "35" })
                            </div>

                            <hr />

                            <div class="row">
                                <div class="col-md-2"></div>
                                <div class="col-md-5">
                                    <input type="submit" name="submit" id="submit" class="btn btn-success" value="Approve" />
                                </div>
                                <div class="col-md-2"></div>
                                <div class="col-md-5">
                                    <input type="submit" name="submit" id="reject" class="btn btn-danger" value="Reject" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="panel-group">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" href="#collapse1">Employee Balances</a>
                                </h4>
                            </div>
                            <div id="collapse1" class="panel-collapse collapse">
                                <ul class="list-group">
                                    @{ 
                                        var BalanceStrings = ViewData["BalanceStrings"] as List<string>;
                                        foreach(string balanceString in BalanceStrings)
                                        {
                                            <li class="list-group-item">@balanceString</li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
