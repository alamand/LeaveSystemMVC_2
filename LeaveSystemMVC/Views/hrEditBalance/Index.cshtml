@model IEnumerable<LeaveSystemMVC.Models.sEmployeeModel>
@{
    ViewBag.Title = "Edit Employee Balances";
}

@Html.Partial("_LeftMenu")
<h2>@ViewBag.Title</h2>
<div class="col-md-4">
    <table class="table">
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Edit Balance</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.staffID </td>
                <td>@item.firstName</td>
                <td>@item.lastName</td>
                <td>@Html.ActionLink("Edit", "Edit", "hrEditBalance", new { id = item.staffID }, null)</td>
            </tr>

        }
    </table>
</div>

