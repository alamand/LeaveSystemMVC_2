@model IEnumerable<LeaveSystemMVC.Models.hrHolidaysCalender>

@{
    ViewBag.Title = "Holidays Calendar";
}

@Html.Partial("_LeftMenu")

<h2>@ViewBag.Title</h2>
<div class="col-md-6">
    <p>@Html.ActionLink("Create a new Holiday", "CreateHoliday")</p>
    <br />
    @{
        var yearList = ViewData["YearList"] as Dictionary<int, string>;
        var selectedYear = @ViewData["SelectedYear"];
    }
    @using (Html.BeginForm("FilterListByYear", "hrHolidaysCalender", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <div class="row ">
                <div class="col-md-3">
                    <p style="padding-top: 8px;">Filter by Year:</p>
                </div>
                <div class="col-md-3">
                    <div class="form-horizontal">
                        @Html.DropDownList("selectedYear", new SelectList(yearList, "Key", "Value"), new { @selected = selectedYear, @class = "form-control", @onchange = "this.form.submit();" })
                    </div>
                </div>
            </div>
        </div>
        <br />
    }
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.holidayName)</th>
            <th>@Html.DisplayNameFor(model => model.startDate)</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr style="border:1px solid black;">
                <td style="border:1px solid black;">@Html.DisplayFor(modelItem => item.holidayName) </td>
                <td style="border:1px solid black;">
                    @Html.DisplayFor(modelItem => item.startDate.Year)/@Html.DisplayFor(modelItem => item.startDate.Month)/@Html.DisplayFor(modelItem => item.startDate.Day)
                </td>
            </tr>
        }
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
