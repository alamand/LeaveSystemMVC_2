@model LeaveSystemMVC.Models.sleaveBalanceModel
@Html.Partial("_LeftMenu")
<div class="col-md-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Credit Leave Balances at the Start of Each Calendar Year</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <article>
                <b>Note: Use this feature only at the start of the year to credit the organization's leave balances.
                This feature will reset the balances of all staff members to the alloted quota per year, with the exception of annual leave.
                For annual leave, the remaining balance is carried over to the next year.</b>
            </article>
            <hr />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                   
                    <input type="submit" value="Credit Leave Balances of Organization" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
