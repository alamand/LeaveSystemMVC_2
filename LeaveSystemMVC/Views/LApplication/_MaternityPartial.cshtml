@model LeaveSystemMVC.Models.sLeaveModel

<!--start and end date-->
<div class="container-fluid form-group">
    <div class="row">
        <div class="col-xs-2" style="white-space:nowrap">
            @Html.LabelFor(model => model.startDate, "Start Date", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.startDate, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.startDate, "", new { @class = "text-danger" })
        </div>

        <div class="col-xs-2" style="white-space:nowrap">
            @Html.LabelFor(model => model.returnDate, "Reporting Back", htmlAttributes: new { @class = "control-label col-md-3" })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.returnDate, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.returnDate, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<hr />

<!--phone no-->
<div class="row">
    <div class="col-md-2" style="white-space:nowrap">
        @Html.LabelFor(model => model.contactDetails, "Phone No", htmlAttributes: new { @class = "control-label col-md-4" })
    </div>

    <div class="col-md-4">
        @Html.EditorFor(model => model.contactDetails, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.contactDetails, "", new { @class = "text-danger" })
    </div>
</div>
<hr />

<!--comment box-->
<div class="row">
    <div class="col-md-2">
        @Html.LabelFor(model => model.comments, "Comments", htmlAttributes: new { @class = "control-label col-md-3" })
    </div>

    <div class="col-md-5">
        @Html.TextAreaFor(model => model.comments, new { rows = "5", cols = "50" })
        @Html.ValidationMessageFor(model => model.comments, "", new { @class = "text-danger" })
    </div>
</div>
<hr />

<!--support docs-->
<div class="row">
    <div class="col-md-2" style="white-space:nowrap">
        @Html.LabelFor(model => model.documentation, htmlAttributes: new { @class = "control-label col-md-4" })
    </div>

    <div class="col-md-5">
        <div class="form-control" style="padding-top: 0px;">
            <div class="form-group">
                <input type="file" name="file" class="file" style=" visibility: hidden; position: absolute;">
                <div class="input-group">
                    <input type="text" class="form-control" disabled placeholder="Upload Document">
                    <span class="input-group-btn">
                        <button class="browse btn btn-primary input-small" type="button"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>
