@model LeaveSystemMVC.Models.sLeaveModel

@{
    ViewBag.Title = "Apply For Leave";
}

@Html.Partial("_LeftMenu")

<div class="col-md-10">
    <h2>Apply For Leave</h2>
    @using (Html.BeginForm("Create", "LApplication", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Application Details</div>
                </div>
                <div class="bootstrap-admin-panel-content">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <!--leave type-->
                        <div class="row">
                        <div class="col-md-2" style="white-space:nowrap">

                            @Html.LabelFor(model => model.leaveType, "Leave Type", htmlAttributes: new { @class = "control-label col-md-4" })
                        </div>

                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.leaveType, new SelectList(ViewBag.leave), new { @class = "form-control" }) <!--  viewBag.leave (leave is a list) is created in the controller -->
                            @Html.ValidationMessageFor(model => model.leaveType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                        <hr />
                        <!--start and end date-->
                        <div class="container-fluid form-group">
                            <div class="row">
                                    <div class="col-xs-2" style="white-space:nowrap">
                                        @Html.LabelFor(model => model.startDate, "Start Date", htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.startDate, new {@class = "form-control", type = "date" })<!--  just use type = "date" to get a date field and make it a textBoxFor -->
                                        @Html.ValidationMessageFor(model => model.startDate, "", new { @class = "text-danger" })
                                    </div>
                               


                                    <div class="col-xs-2" style="white-space:nowrap">
                                        @Html.LabelFor(model => model.endDate, "Reporting Date", htmlAttributes: new { @class = "control-label col-md-3" })
                                    </div>
                               
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.endDate, new { @class = "form-control", type = "date" })
                                        @Html.ValidationMessageFor(model => model.endDate, "", new { @class = "text-danger" })
                                    </div>
                                    </div>
                                    </div>
                             
                        <hr />
                        <!--start and end time-->


                        <div class="container-fluid form-group">
                            <div class="row">
                                    <div class="col-xs-2" style="white-space:nowrap">
                                        @Html.LabelFor(model => model.shortStartTime, "Start Time", htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.shortStartTime, new { @class = "form-control", type = "time" })
                                        @Html.ValidationMessageFor(model => model.shortStartTime, "", new { @class = "text-danger" })
                                        
                                    </div>
                                
                                    <div class="col-xs-2" style="white-space:nowrap">
                                        @Html.LabelFor(model => model.shortEndTime, "End Time", htmlAttributes: new { @class = "control-label col-md-2" })
                                    </div>
                                
                               
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.shortEndTime, new { @class = "form-control", type = "time" })
                                        @Html.ValidationMessageFor(model => model.shortEndTime, "", new { @class = "text-danger" })
                                        
                                    </div>
                              </div>
                            </div>
                        <hr />

                        <!--phone no-->
                        <div class="row">
                            <div class="col-md-2" style="white-space:nowrap">
                                @Html.LabelFor(model => model.contactDetails, "Phone No", htmlAttributes: new { @class = "control-label col-md-4" })
                            </div>

                            <div class="col-md-4">
                                @Html.EditorFor(model => model.contactDetails, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.contactDetails, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr />
                        <!--comment box-->
                        <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(model => model.comments, "Comments", htmlAttributes: new { @class = "control-label col-md-3" })
                                    </div>
                               
                                    <div class="col-md-6">
                                        @Html.TextAreaFor(model => model.comments, new { rows = "5", cols = "50" })
                                        @Html.ValidationMessageFor(model => model.comments, "", new { @class = "text-danger" })
                                   </div>
                            </div>
                                <hr />
                        <!--support docs-->
                        <div class="row">
                                    <div class="col-md-3" style="white-space:nowrap">
                                        @Html.LabelFor(model => model.supportingDocs, "Supporting Docs", htmlAttributes: new { @class = "control-label col-md-4" })
                                    </div>
                               
                                    <div class="col-md-6">
                                        <input type="file" name="file" />
                                        @Html.ValidationMessageFor(model => model.supportingDocs, "", new { @class = "text-danger" })
                                        
                                        </div>
                                    </div>
                               
                        <hr />
                        <!--book air ticket-->
                                <div class="row">
                                    <div class="col-md-3" style="white-space:nowrap">
                                        @Html.LabelFor(model => model.bookAirTicket, "Book Air Ticket", htmlAttributes: new { @class = "control-label col-md-4" })
                                    </div>
                                
                                    <div class="col-md-6">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.bookAirTicket)
                                            @Html.ValidationMessageFor(model => model.bookAirTicket, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    </div>

                              <br /><br />
                        <div class="form-group">
                            <div class="col-md-offset-5 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
                    }
                </div>

