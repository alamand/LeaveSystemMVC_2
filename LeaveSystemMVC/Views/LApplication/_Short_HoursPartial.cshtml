@model LeaveSystemMVC.Models.sLeaveModel

<!--start and end date-->
<div class="container-fluid form-group">
    <div class="row">
        <div class="col-xs-2" style="white-space:nowrap">
            @Html.LabelFor(model => model.startDate, "Date", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.startDate, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.startDate, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<hr />

<!--start and end time-->
<div class="container-fluid form-group">
    <div class="row">
        <div class="col-xs-2" style="white-space:nowrap">
            @Html.LabelFor(model => model.shortStartTime, "Start Time", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.shortStartTime, new { @class = "form-control", type = "time" })
            @Html.ValidationMessageFor(model => model.shortStartTime, "", new { @class = "text-danger" })
        </div>

        <div class="col-xs-2" style="white-space:nowrap">
            @Html.LabelFor(model => model.shortEndTime, "End Time", htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(model => model.shortEndTime, new { @class = "form-control", type = "time" })
            @Html.ValidationMessageFor(model => model.shortEndTime, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<hr />

<!--comment box-->
<div class="row">
    <div class="col-md-2">
        @Html.LabelFor(model => model.comments, "Comments", htmlAttributes: new { @class = "control-label col-md-3" })
    </div>

    <div class="col-md-6">
        @Html.TextAreaFor(model => model.comments, new { rows = "5", cols = "50" })
        @Html.ValidationMessageFor(model => model.comments, "", new { @class = "text-danger" })
    </div>
</div>


