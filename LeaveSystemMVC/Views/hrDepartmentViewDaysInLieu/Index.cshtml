@model LeaveSystemMVC.Models.sEmployeeModel
@Html.Partial("_LeftMenu")
<div class="col-md-8">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Credit Days in Lieu</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            
            <!--employee start and end date-->
            <div class="container-fluid form-group">
                <div class="row">
                    <div class="col-xs-2" style="white-space:nowrap">
                        @Html.LabelFor(model => model.empStartDate, "Start Date", htmlAttributes: new { @class = "control-label col-md-1", type = "Date" })
                    </div>

                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.empStartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.empStartDate, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.empOldStartDate)
                    </div>

                    <div class="col-xs-2" style="white-space:nowrap">
                        @Html.LabelFor(model => model.empEndDate, "End Date", htmlAttributes: new { @class = "control-label col-md-4" })
                    </div>

                    <div class="col-md-4">
                        @{
                            string endDateFormat = "";
                        }
                        @Html.TextBoxFor(model => model.empEndDate, endDateFormat, new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(model => model.empEndDate, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.empOldEndDate)
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                @Html.LabelFor(model => model.designation, "Comment", htmlAttributes: new { @class = "control-label col-md-2" })

                @Html.TextAreaFor(model => model.designation, new { rows = "6", cols = "35" })
            </div>

            <br /><br /><br />
            <div class="row">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
