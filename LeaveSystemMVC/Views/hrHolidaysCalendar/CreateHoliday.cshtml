@model LeaveSystemMVC.Models.Holiday
@Html.Partial("_LeftMenu")
@{ ViewBag.Title = "Create Holiday"; }

<div class="col-md-6">
    <h3>@ViewBag.title</h3>
    <hr />
    @Html.Partial("../_Message")
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-3" style="white-space:nowrap">
                    @Html.LabelFor(model => model.holidayName, "Holiday Name", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.holidayName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.holidayName, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-3" style="white-space:nowrap">
                    @Html.LabelFor(model => model.date, "Holiday Date", htmlAttributes: new { @class = "control-label col-md-2", type = "Date" })
                </div>

                <div class="col-md-4">
                    @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="col-md-offset-2">
                <a href="@Url.Action("Index", "hrHolidaysCalendar")" class="btn btn-default col-md-3">
                    <span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span>
                    Back
                </a>

                <button type="submit" value="Save" class="btn btn-success col-md-offset-1 col-md-3">
                    <span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span> Save
                </button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
